@model List<Model.EF.Content>
@{
    ViewBag.Title = "Quản lý tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{Quản lý tin tức}
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Quản lý bài viết
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tiêu đề</th>
                        <th>Chuyên mụcs</th>
                        <th>Thẻ</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th>ViewCount</th>
                        <th>$</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Tiêu đề</th>
                        <th>Chuyên mụcs</th>
                        <th>Thẻ</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th>ViewCount</th>
                        <th>$</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.CategoryID</td>
                            <td>@item.Tags</td>
                            <td>@(item.CreatedDate.HasValue ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td>@(item.Status.GetValueOrDefault(false) ? "Active" : "Block")</td>
                            <td>@item.ViewCount</td>
                            <td>
                                <a href="/Admin/Content/Edit/@item.ID">Sửa</a>|
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID },
                               new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này",
                                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
<p class="small text-center text-muted my-5">
    <em>More table examples coming soon...</em>
</p>

